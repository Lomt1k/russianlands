<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             x:Class="GameDataEditor.Views.Editor.ShopItems.ArenaShopItemPatternView">

  <Border Background="SlateGray" Padding="5">
    <Border Background="WhiteSmoke" Padding="5">
      <StackPanel Background="WhiteSmoke" Margin="5">

        <TextBlock Text="Item Pattern" Padding="0,5,0,15" Classes="h3"/>
        <TextBlock Text="price type"/>
        <ComboBox ItemsSource="{Binding allRarities}"
                  SelectedItem="{Binding itemPattern.rarity}"/>
        <TextBlock Text="count"/>
        <TextBox Text="{Binding itemPattern.count}"/>
        <TextBlock Text="chips price"/>
        <TextBox Text="{Binding itemPattern.chipsPrice}"/>

      </StackPanel>
    </Border>
  </Border>
  
</UserControl>
