<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
             x:Class="TextGameRPG.Views.Editor.PotionsEditor.PotionInspectorView">

  <Border Grid.Column="0" Background="WhiteSmoke" Width="600" Margin="40,0">
    <ScrollViewer Height="800"
                  VerticalScrollBarVisibility="Visible" AllowAutoHide="False">

      <StackPanel Margin="20,20,40,0" Spacing="10">
        <TextBox Classes="h3" Text="{Binding tempPotion.debugName}"/>
        <UserControl Content="{Binding potionFieldsEditorView}"/>

        <StackPanel Orientation="Horizontal" Margin="0,20" Spacing="20">
          <Button Content="Save changes " Classes="NeutralBig" Command="{Binding saveChangesCommand}"/>
          <Button Content="Reset changes" Classes="NeutralBig" Command="{Binding cancelChangesCommand}"/>
        </StackPanel>

      </StackPanel>

    </ScrollViewer>
  </Border>
  
</UserControl>
