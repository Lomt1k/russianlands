<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TextGameRPG.Views.Editor.Rewards.EditorItemWithCodeRewardView">

  <Border Background="SlateGray" Padding="5">
    <Border Background="WhiteSmoke" Padding="5">
      <StackPanel Background="WhiteSmoke" Margin="5">

        <TextBlock Text="Item With Code" Padding="0,5,0,15" Classes="h3"/>
        <TextBlock Text="item code"/>
        <TextBox Text="{Binding reward.itemCode}"/>

      </StackPanel>
    </Border>
  </Border>
  
</UserControl>
