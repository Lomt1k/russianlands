<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Width="700" Height="600"
             x:Class="TextGameRPG.Views.BotControl.BotControl">

  <StackPanel Orientation="Vertical" Spacing="20" Margin="20">

    <!-- Console Output -->
    <TextBox Height="400" IsReadOnly="true" Text="{Binding consoleOutput}"/>

    <!-- Controls -->
    <StackPanel Orientation="Horizontal" Spacing="20">
      <Button Content="Start bot" Classes="Secondary"
              Command="{Binding startListening}"
              IsVisible="{Binding !isBotListening}"/>
      <Button Content="Stop listening" Classes="Negative"
              Command="{Binding stopListening}"
              IsVisible="{Binding isBotListening}"/>
    </StackPanel>
    
  </StackPanel>
  
</UserControl>
